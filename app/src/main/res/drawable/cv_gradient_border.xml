<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Borde transparente (ajustar el tamaño para crear el efecto de borde) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="2dp" android:color="#FF8400" /> <!-- Color y ancho del borde -->
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- Degradado (hacerlo ligeramente más pequeño para que el borde sea visible) -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#9EFF0000"
                android:endColor="#9EFF5100"
                android:angle="45" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>